<h2>Notice Board</h2>
  <% if @current_user %>
    <h3><%= link_to('New Notice', '/notices/new') %></h3>
  <% end %>
<ol>
  <% @notices.each do |notice| %>
    <li><div class="notice_message">Notice: <%= notice.heading %><br>
    User: <%= notice.user.name %> | Category: <% if notice.category %><%= notice.category.name %><% end %> | Time: <%= notice.created_at %><br>
     Details: <%= notice.message %><br>
     Image: <%= cl_image_tag(notice.cl_id) %></div>
     <% if @current_user && @current_user.admin %>
      <%= button_to('Delete Notice', notice, :method => 'delete', :data => {:confirm => 'You sure homie???'}) %>
     <% end %>
    </li>
  <% end %>
</ol>