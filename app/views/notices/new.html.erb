<h1>New Notice</h1>
<%= form_for @notice do |f| %>
  <p>
    <%= f.label :heading %>
    <%= f.text_field :heading %>
  </p>

  <p>
    <%= f.label :message %>
    <%= f.text_area :message %>
  </p>

  <p>
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map {|category|[category.name, category.id]}, :include_blank => true %>
  </p>

  <p>
    <%= f.label :Image %>
    <%= f.file_field :cl_id %>
  </p>

  <p><%= @current_user.id %></p>

  <%= f.submit %>
<% end %>